<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="375.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <children>
      <FlowPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <Label alignment="CENTER" prefHeight="49.0" prefWidth="230.0" text="CIS319 Calculator" textFill="#a11717">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <ImageView fitHeight="56.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../bin/application/goldie.jpg" />
               </image>
            </ImageView>
         </children>
      </FlowPane>
      <Label fx:id="label" alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="300.0" text="0">
