            <Button fx:id="clear" mnemonicParsing="false" onAction="#otherButtonActions" prefHeight="48.5" prefWidth="75.0" text="C" />
            <Button fx:id="clearEntry" mnemonicParsing="false" onAction="#otherButtonActions" prefHeight="48.5" prefWidth="75.0" text="CE" />
            <Button fx:id="plusOrMinus" mnemonicParsing="false" onAction="#otherButtonActions" prefHeight="48.5" prefWidth="75.0" text="+-" />
            <Button fx:id="multiply" mnemonicParsing="false" onAction="#arithmeticButtonAction" prefHeight="48.5" prefWidth="75.0" text="*" />
