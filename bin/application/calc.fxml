         </padding>
      </Label>
      <FlowPane prefHeight="291.0" prefWidth="300.0">
         <children>
            <Button fx:id="memoryClear" mnemonicParsing="false" onAction="#otherButtonActions" prefHeight="48.5" prefWidth="75.0" text="MC" />
