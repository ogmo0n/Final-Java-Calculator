               <children>
                  <Button fx:id="one" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="48.5" prefWidth="75.0" text="1" />
                  <Button fx:id="two" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="48.5" prefWidth="75.0" text="2" />
                  <Button fx:id="three" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="48.5" prefWidth="75.0" text="3" />
                  <Button fx:id="zero" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="48.5" prefWidth="150.0" text="0" />
                  <Button fx:id="decimal" mnemonicParsing="false" onAction="#otherButtonActions" prefHeight="48.5" prefWidth="75.0" text="." />
               </children>
            </FlowPane>
            <Button fx:id="equals" mnemonicParsing="false" onAction="#arithmeticButtonAction" prefHeight="97.0" prefWidth="75.0" text="=" />
         </children>
      </FlowPane>
   </children>
